<?xml version="1.0"?>
<resources>

    <!-- Fonts -->
    <font id="font_hud_counter" file="graphics/hud/smb3_status_bar.png" width="8" height="8" >
        <char id="0" x="0" y="0" number="10" />
    </font>

    <!-- HUD Animations -->
    <animation id="mario_indicator">
        <frame image="graphics/hud/smb3_status_bar.png" x="48" y="8" w="16" h="8" />
    </animation>

    <animation id="times">
        <frame image="graphics/hud/smb3_status_bar.png" x="80" w="8" h="8" />
    </animation>

    <animation id="time_indicator">
        <frame image="graphics/hud/smb3_status_bar.png" x="88" w="8" h="8" />
